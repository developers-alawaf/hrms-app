/* New main.main-content styles for sidebar overlap fix */
main.main-content {
  flex-grow: 1;
  padding-top: 60px; /* Space for fixed header */
  transition: margin-left 0.3s ease; /* Smooth transition for margin-left */
  position: relative; /* Keep for positioning children if needed */
}

