/* Reverted .header styles */
/* No specific .header styles here, as it was previously handled by Header.css or inline styles */

/* New Ensure login/public pages have no sidebar artifacts for Bug #2 */
.login-container,
.auth-container,
.home-container {
  margin-left: 0 !important;
  width: 100vw !important;
  position: relative;
  z-index: 1;
}

/* New media query for main content shifting */
@media (min-width: 769px) {
  main.main-content.main-content-shifted {
    margin-left: 250px; /* When sidebar is open */
  }

  main.main-content.main-content-expanded {
    margin-left: 0; /* When sidebar is closed */
  }
}
